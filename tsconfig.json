{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ES2022",
    "types": [],
    "sourceMap": true,
    "declaration": true,
    "allowImportingTsExtensions": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}
